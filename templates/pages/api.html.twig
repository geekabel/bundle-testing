{% extends "base.html.twig" %}

{% block body %}
<div class="container mt-4">
			{% for infos in form %}
		<form action="{{ path("pages.addapi")}}" method="POST">
			<div class="form-group">
				<label for="title">Title</label>
				<input class="form-control" type="text" name="title" value="{{infos.title}}"/>
			</div>
			<div class="form-group">
				<label>Description</label>
				<input type="text" class="form-control" name="body" value="{{infos.body}}"/>
			</div>
			<button type="submit" class="btn btn-primary">Ajouter Info</button>
		</form>

			{% endfor %}
</div>
{% endblock %}
