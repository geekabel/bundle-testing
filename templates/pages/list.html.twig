{% extends "base.html.twig" %}

{% block body %}
<div class="container mt-4">
<h2 class="text-center" >Tout les posts</h2>

{% for post in posts %}
<div class="row py-2">
        <ul class="list-unstyled">
            <li><strong>Titre:</strong> {{post.title ? post.title|slice(0,80)}}-{{post.id}}</li>
        </ul>
        <article>
           <p>{{post.body ? post.body|slice(0,200)~'...' : 'Pas de description'}}</p> 
        </article>
    <a class="btn btn-primary pull-right" href="{{path('pages.show',{id:post.id})}}">Read More</a>
</div>    
{% endfor %}
    <div class="d-flex justify-content-center navigation">
        {{ knp_pagination_render(posts,'pagination/pagination.html.twig') }}
    </div>
</div>


{% endblock %}